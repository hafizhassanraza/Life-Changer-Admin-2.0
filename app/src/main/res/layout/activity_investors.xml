<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ActivityInvestors">


    <androidx.appcompat.widget.SearchView
        android:id="@+id/svUsers"
        android:hint="Search"
        android:background="@color/secondary_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvInvestors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/svUsers"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pdfAllInvestors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/downloadpdficon"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp" />



</RelativeLayout>