<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ActivityInvestorDetailsProfile">

    <RelativeLayout
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/primary">

        <androidx.cardview.widget.CardView
            android:id="@+id/cd1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardElevation="10dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="6dp">
            <ImageView
                android:id="@+id/userPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/cd1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInvestorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textprimary"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Muhammad Mujahid"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/D/O"
                    android:textSize="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/secondary_m"/>
                <TextView
                    android:id="@+id/tvInvestorFatherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mujahid Khokhar"
                    android:textSize="15dp"
                    android:layout_marginLeft="3dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/teal_200"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tvInvestorCnic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/statusbarcolor"
                android:text="38464-66146141-4"/>
            <TextView
                android:id="@+id/tvInvestorPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/statusbarcolor"
                android:text="030303004536"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
