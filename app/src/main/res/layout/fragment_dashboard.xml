<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.DashboardFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="255dp">
            <TextView
                android:id="@+id/tvHeaderAnnoun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:elevation="10dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="Announcement !"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_announcement_"/>




            <TextView
                android:id="@+id/tvAnnouncement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tvHeaderAnnoun"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="85dp"
                android:layout_marginBottom="30dp"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/red_m"
                android:text="kjsfdgjksjgk jkdgjkdjk kjlsdgfjks jksdg sdfdsf dsfsfd jksdg kdgjksdgjk jsdg kjsdgjksjkdfjjsdfjk kjsdfjk jskdfjksdfjksdkjfsjkdf kjsdf jdfsdsf jdfjksdfjkkjsfd"

                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/bg_grad_fade"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discus your Investment Plans !"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/secondary"
            android:layout_marginLeft="20dp"/>




        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"
            app:columnCount="4"
            app:rowCount="2">


            <LinearLayout
                android:id="@+id/layAccounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                app:layout_column="0"
                app:layout_row="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="@color/primary"
                    android:src="@drawable/mprofit"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Accounts"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/laynews"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/announcement"
                    android:tint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Announcement"
                    android:textColor="@color/primary" />


            </LinearLayout>


        </androidx.gridlayout.widget.GridLayout>

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="@color/secondary"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connected With Us!"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="16dp"
            android:textColor="@color/secondary"/>



        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"
            app:columnCount="4"
            android:visibility="gone"
            app:rowCount="2">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                app:layout_column="0"
                app:layout_row="0"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:tint="@color/primary"
                    android:src="@drawable/contact_us_"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Contact Us"/>


            </LinearLayout>





        </androidx.gridlayout.widget.GridLayout>


        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="@color/secondary"
            android:layout_gravity="center_horizontal"/>



    </LinearLayout>



</ScrollView>