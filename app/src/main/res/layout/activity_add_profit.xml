<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ActivityAddProfit">


    <EditText
        android:id="@+id/etProfit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Percentage"/>
    <Button
        android:id="@+id/btnAddProfit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Profit"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Convert Profit to Investments"/>
    <Button
        android:id="@+id/btnConvertProfit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Convert" />
    <Button
        android:id="@+id/btnAllInvestorsAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="All Investors Accept" />
    <Button
        android:id="@+id/btnTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="temp" />


</LinearLayout>