<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="50dp"
    tools:context=".ui.ActivityExcludeInvestors">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Clients Record"
    android:textColor="@color/primary"
    android:textSize="20dp"
    android:fontFamily="@font/montserrat_bold"
    android:layout_marginBottom="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selected Investors:"
                        android:textColor="@color/primary"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        />
                    <TextView
                        android:id="@+id/selectedClients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="333"
                        android:paddingLeft="6dp"
                        android:textColor="@color/PrimaryVariant"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"

                    >
                    <TextView
                        android:id="@+id/selectClients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textColor="@color/primary"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/montserrat_bold"/>



                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="----------"
                    android:textColor="@color/primary"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/montserrat_bold"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Removed Investors"
                        android:textColor="@color/primary"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        />
                    <TextView
                        android:id="@+id/removedClients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="333"
                        android:paddingLeft="6dp"
                        android:textColor="@color/PrimaryVariant"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"

                    >
                    <TextView
                        android:id="@+id/removeClients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove"
                        android:textColor="@color/primary"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/montserrat_bold"/>



                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="----------"
                    android:textColor="@color/primary"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/montserrat_bold"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>